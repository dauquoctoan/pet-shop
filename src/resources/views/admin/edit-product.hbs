<div class="content">
     <div class="add-product-center">
          <div class="content-add-product">
               <form class="content-add-product" ref='uploadForm' id='uploadForm'   action="/admin/product/{{Product._id}}?_method=PUT" method="POST" enctype="multipart/form-data">
                    <div class="content-add-product-title">
                         Sửa
                    </div>
                    <div class="content-add-product-item">
                         <div class="content-add-product-name">
                              Tên sản phẩm
                         </div>
                         <div class="content-add-product-input">
                              <input value="{{Product.name}}" name="name" class="add-input-add" type="text"/>
                         </div>
                    </div>
                    <div class="content-add-product-item">
                         <div class=" content-add-product-name">
                              Mô tả
                         </div>
                         <div class="content-add-product-input">
                              <input value="{{Product.description}}" name="description"  type="text"/>
                         </div>
                    </div>
                    <div class="content-add-product-item">
                         <div class=" content-add-product-name">
                              Giá
                         </div>
                         <div class="content-add-product-input">
                              <input value="{{Product.price}}" name="price" type="number"/>
                         </div>
                    </div>
                    <div class="content-add-product-item">
                         <div class=" content-add-product-name">
                              Giá cũ
                         </div>
                         <div class="content-add-product-input">
                              <input value="{{Product.priceold}}" name="priceold" type="number"/>
                         </div>
                    </div>
                    <div class="content-add-product-item">
                         <div class=" content-add-product-name">
                              Màu sắc
                         </div>
                         <div class="content-add-product-input">
                              <input value="{{Product.color}}" name="color" type="text"/>
                         </div>
                    </div>

                    <div class="content-add-product-item">
                         <div class=" content-add-product-name">
                              Số lượng
                         </div>
                         <div class="content-add-product-input">
                              <input value="{{Product.quantity}}" name="quantity" type="number"/>
                         </div>
                    </div>
                     <div class="content-add-product-item">
                         <div class="content-add-product-name">
                              Loại sản phẩm
                         </div>
                         <div class="content-add-product-input">
                              <select name="category">
                                   <option value="{{Product.category._id}}">{{Product.category.name}}</option>
                                   {{#each Category}}
                                        <option value="{{this._id}}">{{this.name}}</option>
                                   {{/each}}
                              </select>
                         </div>
                    </div>
                    <div class="content-add-product-item">
                         <div class=" content-add-product-name">
                              Ảnh
                         </div>
                         <div class="content-add-product-input">
                              <input  name="image" type="file"/>
                         </div>
                    </div>
                   
                    <div class="add-product-button">
                         <button  value='Upload!' class="add-btn-add">Sửa</button>
                    </div>
               </form>
          </div>
     </div>
</div>