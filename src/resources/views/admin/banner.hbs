<div class="content">
     <div class="content-center">
          <div class="content-page-title">
               BANNERS
          </div>
          <div style="display: flex;">
               <div >
                    <form class="content-search"  action="/admin/product/search">
                         <div class="input-search-center">
                              <input name="search" class="input-search" type="text"/>
                         </div>
                         <button class="btn-search">Tìm kiếm</button>
                    </form>
               </div>
          </div>
          <div class="content-add">
               <a href="/admin/banner/add"><button class="btn-add">Thêm</button></a>
          </div>
          <div class="content-list">
               {{#each BannerActive}}
               <div class="content-item">
                    <a style="text-decoration: none; cursor: pointer;" href="/admin/banner/{{this._id}}">
                         <div class="content-item-name" style="background-color: aqua;">
                              <label style="margin-left: 20px; cursor: pointer; color: black">{{this.name}}</label>
                              <label style="margin-left: 20px; cursor: pointer; color: black;margin-right: 20px;">{{this.position}}</label>

                         </div>
                    </a>
               </div>
               {{/each}}
               {{#each Banner}}
               <div class="content-item">
                    <a style="text-decoration: none; cursor: pointer;" href="/admin/banner/{{this._id}}">
                         <div class="content-item-name">
                              <label style="margin-left: 20px; cursor: pointer; color: black">{{this.name}}</label>
                              <label style="margin-left: 20px; cursor: pointer; color: black; margin-right: 20px;">{{this.position}}</label>
                         </div>
                    </a>
                    <div class="content-item-delete">
                         <form action="/admin/banner/{{this._id}}?_method=DELETE" method="POST">
                              <button style="border: none; text-decoration: none;" type="submit"><i class="delete-icon fas fa-times"></i></button>
                         </form>
                    </div>
               </div>
               {{/each}}
          </div>
     </div>
</div>